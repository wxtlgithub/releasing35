<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="mtsGatewayModule5418" class="com.lxt2.gateway.sms.module.SmsGatewayModule">
		<property name="id" value="3518"/>
		<property name="name" value="下行发送CMPP30"/>
		<property name="hub" ref="hubImpl"/>
		<property name="submitQueue" ref="mtsSubmitQueue5418"/>
		<property name="adapter" ref="mtsPersistentSubmitQueueAdapter5418"/>
		<property name="gateway" ref="mtsCmpp30Gateway5418"/>
		<property name="status" value="STOP"/>
		<property name="configList">
			<list>
				<ref bean="mtsCmpp30Parameter5418"/>
				<ref bean="mtsCmpp30DeliverAdapter5418"/>
			</list>
		</property>
		<!-- 命令集合 -->
		<property name="controlCmdMap">
			<map>
				<entry key="qePerf" value-ref="mtsQueueCmd5418"/>
                <entry key="view" value-ref="mtsGateWayViewCmd5418"/>
			</map>
		</property>
		<!-- 指标集合 -->
		<property name="kpiList">
			<list>
				<ref bean="mtsQueueKPI5418"/>
				<ref bean="mtsGateWayModuleKPI5418"/>
			</list>
		</property>
	</bean>

	<!-- 模块的指标配置 -->
	<bean id="mtsQueueKPI5418" class="com.lxt2.queuekc.QueueKPI">
		<property name="queue" ref="mtsSubmitQueue5418"/>
	</bean>
	<!-- 模块的命令配置 -->
	<bean id="mtsQueueCmd5418" class="com.lxt2.queuekc.QueuePerfCmd">
		<property name="kpiQueueList">
			<list>
				<ref bean="mtsQueueKPI5418"/>
			</list>
		</property>
	</bean>

	<bean id="mtsSubmitQueue5418" class="com.lxt2.queuekc.CacheQueue" destroy-method="destroy">
		<property name="cache">
			<bean class="ihandy.lxt20.persist.cache.FCCache" destroy-method="close"/>
		</property>
		<property name="queueName" value="mtsSubmit5418"/>
	</bean>
	
	<bean id="mtsPersistentSubmitQueueAdapter5418" class="com.lxt2.gateway.sms.queue.PersistentSubmitQueueAdapter">
		<property name="cacheQueue" ref="mtsSubmitQueue5418"/>
		<property name="hub" ref="hubImpl"/>
		<property name="spliterMap" ref="mtsSpliterMap5418"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5418"/>
	</bean>
	<bean id="mtsPersistentRespQueueAdapter5418" class="com.lxt2.gateway.sms.queue.PersistentRespQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5418"/>
		<property name="saveLogger" ref="saveLogger"/>
		<property name="sid" ref="ndSid"/>
	</bean>
	<bean id="mtsPersistentReportQueueAdapter5418" class="com.lxt2.gateway.sms.queue.PersistentReportQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="reportAdapter" ref="mtsCmpp30reportAdapter5418"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5418"/>
	</bean>
	<bean id="mtsPersistentDeliverQueueAdapter5418" class="com.lxt2.gateway.sms.queue.PerisitentDeliverQueueAdapter">
		<property name="hub" ref="hubImpl" />
		<property name="deliverAdapter" ref="mtsCmpp30DeliverAdapter5418"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5418"/>
	</bean>
    <bean id="mtsGateWayModuleKPI5418" class="com.lxt2.gateway.sms.module.SmsGatewayModuleKPI">
        <property name="cacheQueue" ref="mtsSubmitQueue5418"/>
        <property name="dataGather" ref="mtsDataGather5418"/>
        <property name="module" ref="mtsGatewayModule5418"/>
    </bean>
    <bean id="mtsDataGather5418" class="com.lxt2.gateway.sms.GatewayDataGather" init-method="init" destroy-method="destroy">
    	<property name="path" value="${CLASSPATH}/${nodeID}/persistent/statistics/gateway5418.properties"/>
    </bean>
    <!-- 获取模块的监视信息 -->
	<bean id="mtsGateWayViewCmd5418" class="com.lxt2.base.module.ModuleKPICmd">
		<property name="kpi" ref="mtsGateWayModuleKPI5418"/>
	</bean>
	
	<!-- 拆分抽象bean -->
	<bean id="mtsAbstractSpliter5418" abstract="true" lazy-init="true">
		<property name="gatewayId" ref="gatewayId5418"/>
		<property name="gatewayXmlParser" ref="gatewayXml"/>
		<property name="nodeGatewayID" value="${nodeID}" />
	</bean>
	<bean id="mtsSpliterMap5418" class="java.util.HashMap" scope="prototype">
		<constructor-arg index="0">
			<map>
				<entry key="15">
					<!-- 普通短信拆分类 -->
					<bean class="com.techcenter.spliter.CommSmsSpliter"  parent="mtsAbstractSpliter5418" >
						<property name="smSplit">
							<bean class="com.techcenter.spliter.SMSplit" />
						</property>
					</bean>
				</entry>
				<entry key="31">
					<!-- wappush拆分类 -->
					<bean class="com.techcenter.spliter.WapPushSpliter" />
				</entry>
				<entry key="32">
					<!-- 长短信拆分类 -->
					<bean class="com.techcenter.spliter.LongSmsSpliter"  parent="mtsAbstractSpliter5418" />
				</entry>
			</map>
		</constructor-arg>
	</bean>
</beans>
